

@{
    Layout = null; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Municipal Billing System - Home</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Link to the external JS file -->
    <script src="~/js/newscript.js"></script>
    <!-- Link to the external css file -->
    <link rel="stylesheet" href="~/css/newstyle.css">

</head>
<style>
     body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 20px;
        }
</style>
<body>

    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="home.php">Municipal Billing System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">


                    @*</li>*@
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Login", "Reg", new { area = "" })">
                            <i class="fas fa-sign-out-alt"></i> Login
                        </a>
                    </li>
                </ul>

            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container-fluid">
        <div class="profile-container">
           <h2 class="text-center mb-4">Latest News on Electricity and Water</h2>
    
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger text-center">@Html.Raw(ViewBag.ErrorMessage)</div>
    }

    <div class="row">
        @if (ViewBag.Articles != null)
        {
            foreach (var article in ViewBag.Articles)
            {
                <div class="col-md-4">
                    <div class="card news-card">
                        <img src="@article.UrlToImage ?? "https://via.placeholder.com/300x200?text=No+Image"" alt="Article Image" />
                        <div class="card-body">
                            <h5 class="card-title">@article.Title</h5>
                            <p class="card-text">@article.Description</p>
                            <p class="text-muted">Published on @article.PublishedAt by @article.Source</p>
                            <a href="@article.Url" target="_blank" class="btn btn-primary btn-sm">Read More</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center">No news articles found related to electricity or water.</p>
        }
    </div>
        </div>
    </div>

   

</body>
</html>
