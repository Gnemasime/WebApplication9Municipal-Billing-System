                    <p style="color: #e74c3c;">@ViewBag.WaterOverdueCount</p>
                </div>
                <div class="card">
                    <h2>Unpaid Bills (Electricity)</h2>
                    <p style="color: #3498db;">@ViewBag.ElectricityUnpaidCount</p>
                </div>
                <div class="card">
                    <h2>Paid Bills (Electricity)</h2>
                    <p style="color: #2ecc71;">@ViewBag.ElectricityPaidCount</p>
                </div>
                <div class="card">
                    <h2>Overdue Bills (Electricity)</h2>
                    <p style="color: #e74c3c;">@ViewBag.ElectricityOverdueCount</p>
                </div>
            </div>
        </div>

        </div>
    </div>


</body>
</html>
