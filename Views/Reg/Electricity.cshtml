<div class="container mt-4">
    <h2>Electricity</h2>

@{
    var statuses = Enum.GetValues(typeof(EStatus)).Cast<EStatus>();
}

<form method="get">
    <select name="status">
        <option value="">All</option>
        @foreach (var status in statuses)
        {
            var selected = ViewBag.SelectedStatus?.ToString().ToLower() == status.ToString().ToLower() ? "selected=\"selected\"" : "";
            <option value="@status.ToString().ToLower()" >@status</option>
        }
    </select>
    <input type="hidden" name="pageNumber" value="@ViewBag.CurrentPage" />
    <input type="submit" value="Filter" />
</form>
    @if (Model != null && Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Usage (litres)</th>
                    <th>Rate</th>
                    <th>Due Date</th>
                    <th>Status</th>
                    <th>Cost</th>
                    <th>Action</th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var electricity in Model)
                {
                    <tr>
                        <td>@electricity.ElectricityId</td>
                        <td>@electricity.Usage</td>
                        <td>@electricity.Rate.ToString("C")</td>
                        <td>@electricity.DueDate.ToShortDateString()</td>
                        <td>@electricity.status</td>
                        <td>@electricity.Cost.ToString("C")</td>
                         <td>
                    @if (electricity.status == EStatus.unpaid || electricity.status == EStatus.overdue)
                    {
                       <a href="@Url.Action("Pay", "Reg", new { waterId = @electricity.ElectricityId, amount = @electricity.Cost })" class="btn btn-primary">Pay Now with PayPal</a>
}
                    }
                </td>
                         </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">No records found.</div>
    }

        
@if (ViewBag.TotalPages > 1)
{
    <div>
        @if (ViewBag.CurrentPage > 1)
        {
            <a asp-action="Electricity" asp-route-pageNumber="@(ViewBag.CurrentPage - 1)">Previous</a>
        }

        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            if (i == ViewBag.CurrentPage)
            {
                <strong>@i</strong> 
            }
            else
            {
                <a asp-action="Electricity" asp-route-pageNumber="@i">@i</a>
            }
        }

        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
        {
            <a asp-action="Electricity" asp-route-pageNumber="@(ViewBag.CurrentPage + 1)">Next</a>
        }
    </div>
}   


            </div>
        </div>
    </div>

