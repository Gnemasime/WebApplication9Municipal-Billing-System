@model IEnumerable<WebApplication9Municipal_Billing_System.Models.Electricity>

@{
    ViewData["Title"] = "Electricity Usage Records";
}


@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Municipal Billing System - Home</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Link to the external JS file -->
    <script src="~/js/newscript.js"></script>
    <!-- Link to the external css file -->
    <link rel="stylesheet" href="~/css/newstyle.css">

</head>
<body>

    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="home.php">Municipal Billing System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">

 <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "User", new { area = "" })">
                            <i class="fas fa-sign-out-alt"></i> Users
                        </a>
                    </li>
                     <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Bill", new { area = "" })">
                            <i class="fas fa-sign-out-alt"></i> Bills
                        </a>
                    </li>
                     <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Water", new { area = "" })">
                            <i class="fas fa-sign-out-alt"></i> Water
                        </a>
                    </li>
                     <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Electricity", new { area = "" })">
                            <i class="fas fa-sign-out-alt"></i>Electricity
                        </a>
                    </li>
                    @*</li>*@
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Login", "Reg", new { area = "" })">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </a>
                    </li>
                </ul>

            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container-fluid">
        <div class="profile-container">
            

<h2>Electricity Usage Records</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New Electricity Usage
    </a>
</div>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Usage (kWh)</th>
            <th>Rate (per kWh)</th>
            <th>Cost</th>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ElectricityId</td>
                <td>@item.Usage</td>
                <td>@item.Rate</td>
                <td>@item.Cost</td>
                <td>@item.Reg?.Name @item.Reg?.Surname</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ElectricityId" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.ElectricityId" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
     
        </div>
    </div>

   

</body>
</html>

<!-- Link to the external JS file -->
<script src="~/js/newscript.js"></script>
