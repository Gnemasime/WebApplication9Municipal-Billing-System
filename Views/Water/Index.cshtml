<h2>Water Usage Records</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New Water Usage
    </a>
</div>

@{
    var statuses = Enum.GetValues(typeof(WStatus)).Cast<WStatus>();
}

<form method="get">
    <select name="status">
        <option value="">All</option>
        @foreach (var status in statuses)
        {
            var selected = ViewBag.SelectedStatus?.ToString().ToLower() == status.ToString().ToLower() ? "selected=\"selected\"" : "";
            <option value="@status.ToString().ToLower()" >@status</option>
        }
    </select>
    <input type="hidden" name="pageNumber" value="@ViewBag.CurrentPage" />
    <input type="submit" value="Filter" />
</form>


<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Usage (liters)</th>
            <th>Rate (per liter)</th>
            <th>Cost</th>
            <th>User</th>
            <th>DueDate</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.WaterId</td>
                <td>@item.Usage</td>
                <td>@item.Rate</td>
                <td>@item.Cost</td>
                <td>@item.Reg?.Name @item.Reg?.Surname</td>
                <td>@item.DueDate</td>
                <td>@item.status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.WaterId" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.WaterId" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

     
@if (ViewBag.TotalPages > 1)
{
    <div>
        @if (ViewBag.CurrentPage > 1)
        {
            <a asp-action="Index" asp-route-pageNumber="@(ViewBag.CurrentPage - 1)">Previous</a>
        }

        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            if (i == ViewBag.CurrentPage)
            {
                <strong>@i</strong> 
            }
            else
            {
                <a asp-action="Index" asp-route-pageNumber="@i">@i</a>
            }
        }

        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
        {
            <a asp-action="Index" asp-route-pageNumber="@(ViewBag.CurrentPage + 1)">Next</a>
        }
    </div>
}       
